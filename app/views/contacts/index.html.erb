<p id="notice"><%= notice %></p>


<h1><%#= link_to "+New contacts", new_contact_path %></h1>
<div class="text-right">
<%#= button_to "Back" , dashboards_index_path, :method => "get" %>
</div>
<table class="table table-bordered table-striped">


  <thead>
    <tr>
    
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>post</th>
      <th>Message</th>
       <th>Caption part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
          <td><%= contact.email %></td>
            <td><%= contact.phone_no %></td>
             <td><%= contact.post_address %></td>
              <td><%= contact.message %></td>
         <td><%= link_to ('<span class="glyphicon glyphicon-trash"> </span>').html_safe,  contact, method: :delete, confirm: "Are you sure that you wish to delete #{contact.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<style>
   div.text-right{
     float: right;
}
  </style>


