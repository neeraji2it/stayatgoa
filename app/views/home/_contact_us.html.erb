 <%= form_tag contact_us_home_index_path(), :method => :post, :id => "contact_us",:multipart => true, :remote => true do %>
<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
<% if !params[:name].present? %>
<span style="color:red; font-size: 11px;">Name can't be blank</span>
<% end %>
<%= text_field_tag :name, params[:name],:class => "form-control",:placeholder => "Name"%>
<% if !params[:email].present? %>
<span style="color:red; font-size: 11px;">Email can't be blank</span>
<% end %>
<%= text_field_tag :email, params[:email],:class => "form-control",:placeholder => "Email" %>
</div>
<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
<% if !params[:subject].present? %>
<span style="color:red; font-size: 11px;">Subject can't be blank</span>
<% end %>
<%= text_field_tag :subject, params[:subject],:class => "form-control",:placeholder => "Subject" %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
</div>
<div class="clearfix"></div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<% if !params[:message].present? %>
<span style="color:red; font-size: 11px;">Message can't be blank</span>
<% end %>
<%= text_area_tag :message, params[:message],:class => "form-control",:placeholder => "Your Message ...",:id => "comments",:rows => 6 %>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

<div class="pull-right">
<%= submit_tag "SEND",id: "submit", class: "btn btn-primary small" %>
</div>
</div>
<% end %>